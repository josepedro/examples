{
  "id": "/kapua-elasticsearch",
  "cmd": "docker run elasticsearch:5.4.0 -Ecluster.name=kapua-datastore -Ediscovery.type=single-node -Etransport.host=_site_ -Etransport.ping_schedule=-1 -Etransport.tcp.connect_timeout=30s",
  "cpus": 0.3,
  "mem": 128,
  "disk": 100,
  "instances": 1,
  "acceptedResourceRoles": [ "slave_public" ],
  "portDefinitions": [
    {
      "port": 10001,
      "name": "default",
      "protocol": "tcp"
    }
  ]
}
